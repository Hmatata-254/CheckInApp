<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RoomDetailsActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/boarder_line"
        android:layout_marginTop="70dp"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/room_details"
            android:textAlignment="center"
            android:textSize="19sp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/heading"/>

        <androidx.viewpager2.widget.ViewPager2
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:id="@+id/viewPager"
            android:layout_marginTop="10dp"
            android:layout_margin="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtHseId"
            android:text="House number one"
            android:fontFamily="@font/cabin"
            android:textAlignment="center"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtPrice"
            android:text="10,000 ksh"
            android:fontFamily="@font/cabin"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:textColor="@color/black"/>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:id="@+id/txtDesc"
            android:text="Description"
            android:fontFamily="@font/cabin"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/btnRentRoom"
                android:text="Rent room"
                android:fontFamily="@font/heading"
                android:background="@drawable/black_button"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:padding="15dp"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textAlignment="center"/>



        </LinearLayout>






    </LinearLayout>
    
    






</ScrollView>